<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab1gui.CourseUpdateController">
   <VBox alignment="CENTER" spacing="20.0" maxWidth="400">
      <Label text="Update a course record" />
      <TextField fx:id="recordID" promptText="RecordID to update" />

      <TextField fx:id="courseTitle" promptText="Course Title" />
      <TextField fx:id="courseDesc" promptText="Course Description" />
      <Label fx:id="updateMessage" />
      <Button onAction="#submitUpdate" mnemonicParsing="false" text="Update a Record" />

      <Button onAction="#backToMain" fx:id="mainMenuBtn" text="Back to Main Menu"/>
   </VBox>

</VBox>
